<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeCSTvApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/light</item>

        <!-- Text color. -->
        <item name="android:textColor">@color/black</item>

        <!-- Toolbar color. -->
        <item name="android:windowActionBar">@color/light</item>
    </style>
</resources>